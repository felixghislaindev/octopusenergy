{
  "compilerOptions": {
    "target": "es5",
    "types": ["@types/node", "jest"],
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext", // Ensure this is set to Node16 to match moduleResolution
    "moduleResolution": "node", // Add this line
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "tailwind.config.ts",
    "tailwind.config.ts"
  ],
  "exclude": ["node_modules"]
}
